<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Dialog id="idEditProductDialog" title="Edit Product" contentWidth="400px" contentHeight="800px" draggable="true">
        <content>
            <f:SimpleForm
                id="idEditProductForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="4"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="2"
                emptySpanS="0"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label text="ID"/> <Text id="ID1"/>
                        <Label text="Description"/> <Input id="Description1" width="50%"/>
                        <Label text="Price"/> <Input id="Price1" width="50%"/>
                        <Label text="Weight"/> <Input id="Weight1" width="50%"/>
                        <Label text="Color"/> <Input id="Color1" width="50%"/>
                        <Label text="Height"/> <Input id="Height1" width="50%"/>
                        <Label text="Width"/> <Input id="Width1" width="50%"/>
                        <Label text="Depth"/> <Input id="Depth1" width="50%"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Update" press="onUpdate" type="Ghost" />
        </beginButton>
        <endButton>
            <Button text="Close" press="onPressClose" type="Ghost" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
